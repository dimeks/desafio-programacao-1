<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :purschasername, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :purschasername, :class => 'form-control' %>
    </div>
    <%=f.error_span(:purschasername) %>
  </div>
  <div class="form-group">
    <%= f.label :itemdescription, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :itemdescription, :class => 'form-control' %>
    </div>
    <%=f.error_span(:itemdescription) %>
  </div>
  <div class="form-group">
    <%= f.label :itemprice, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :itemprice, :class => 'form-control' %>
    </div>
    <%=f.error_span(:itemprice) %>
  </div>
  <div class="form-group">
    <%= f.label :purchasecount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :purchasecount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:purchasecount) %>
  </div>
  <div class="form-group">
    <%= f.label :merchantaddress, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :merchantaddress, :class => 'form-control' %>
    </div>
    <%=f.error_span(:merchantaddress) %>
  </div>
  <div class="form-group">
    <%= f.label :merchantname, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :merchantname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:merchantname) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
